<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <!-- Suppress browser request for favicon.ico -->
    <link rel="shortcut icon"type="image/x-icon" href="data:image/x-icon;,">

    <title>ESPALIF</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- NOTE! Imports can also use notation @@include('../core/micro.css') and etc -->

    <!-- IMPORT NORMALIZE CSS FRAMEWORK -->
    <style>
      @@include(@@coreNS)
    </style>

    <!-- IMPORT MICRO CSS FRAMEWORK -->
    <style>
      @@include(@@coreSS)
    </style>

    <!-- IMPORT PAGE CSS STYLES -->
    <style>
      @@include(@@pageSS)
    </style>

  </head>

  <body>

      <div class="container">
          <div class="eight columns offset-by-two application">
            <!-- TEXT HEADER -->
            <h1 id="theme" class="textcenter lead">ESPALIF Example</h1>
            <hr class="hrclassy"/>
            <!-- SELECT BUTTON -->
            <div class="textcenter">
							<button id="demo_button" type="button" class="big_button green">Demo</button>
            	<p class="lead" style="margin-top:0px;">Framework examples for CSS and JS</p>
            </div>
            <hr class="hrclassy"/>
            <!-- SELECT BUTTON -->
            <div class="textcenter">
							<button id="tiny_button" type="button" class="big_button yellow">Tiny</button>
            	<p class="lead" style="margin-top:0px;">The "smallest" page possible</p>
            </div>
            <hr class="hrclassy"/>
            <!-- SELECT BUTTON -->
            <div class="textcenter">
							<button id="static_button" type="button" class="big_button red">Static</button>
            	<p class="lead" style="margin-top:0px;">Statically included HTML file</p>
            </div>
            <hr class="hrclassy"/>
          </div>
      </div>

    <!-- IMPORT MICRO JS FRAMEWORK -->
    <script>
      @@include(@@coreJS)
    </script>

  	<!-- IMPORT PAGE JS -->
    <script>
      @@include(@@pageJS)
    </script>

  </body>
</html>
